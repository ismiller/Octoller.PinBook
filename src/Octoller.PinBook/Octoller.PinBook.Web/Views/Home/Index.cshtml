@model HeaderViewModel;

@{
    Layout = "_Layout";
    ViewData["Title"] = "PinBook";
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 pt-5">
            <h1 class="text-center">Создавай, делись, читай!</h1>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <p class="text-center">Здесь вы можете легко добавлять книги в списки и делиться списками с друзьями.</p>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row">
        <div class="col-5"></div>
        <div class="d-grid gap-1 col-2 mx-auto">
            @if (Model.IsAuthenticated)
            {
                <a class="btn btn-outline-success btn-lg" href="#">Смотреть все списки</a>
            } 
            else
            {
                <a class="btn btn-outline-primary btn-lg" asp-action="Login" asp-controller="Account">Войти</a>
            }
        </div>
        <div class="col-5"></div>
    </div>
</div>